@page "/AdicionarCarro"
@model AdicionarCarroModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Adicionar Carro</title>
    <link href="~/css/adicionarCarro.css" rel="stylesheet">
    <link href="~/css/background.css" rel="stylesheet">
    <script src="~/js/adicionarCarro.js"></script>
</head>
<body>
    <img src="/images/logoPalavras.png" alt="Logo" id="logo">
    <div class="sidebar">
        <div class="menu-button"><a href="/PagInicial/"></a></div>
        <div class="menu-button"><a href="/PaginaUser/"></a></div>
        <div class="menu-button"><a href="/PaginaGaragem/" /></a></div>
        <div class="menu-button"><a href="/LicitacoesUser/"></a></div>
        <div class="menu-button"><a href="/LeiloesFavoritos/"></a></div>
        <div class="menu-button"><a href="/LeiloesFuturos/"></a></div>
        <div class="menu-button"><a href="/AtividadeUser/"></a></div>
    </div>
    <div class="page-background"></div>
    <div class="container">
        <div class="box">
            <h2>Registar Carro</h2>
                <form id="registerForm" asp-page="AdicionarCarroModel" method="post">
                    @Html.AntiForgeryToken()
                        <div class="input-box">
                            <input type="text" name="Marca" placeholder="Marca" />
                        </div>
                        <div class="input-box">
                            <input type="text" name="Modelo" placeholder="Modelo" />
                        </div>
                        <div class="input-box">
                            <input type="number" name="Ano" placeholder="Ano" />
                        </div>
                        <div class="input-box">
                            <input type="number" name="Km" placeholder="Kilometragem" />
                        </div>
                        <div class="input-box">
                            <input type="text" name="Condicao" placeholder="Condição" />
                        </div>
                        <div class="input-box">
                            <input type="text" name="ImagemUrl" placeholder="URL da Imagem" />
                        </div>

                <button type="button" onclick="submitRegisterForm()" class="submit-btn">Adicionar Carro</button>
                </form>
        </div>
    </div>
</body>
</html>